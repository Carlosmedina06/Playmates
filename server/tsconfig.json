{
  "compilerOptions": {
    "module": "ES6",
    "target": "es6",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "removeComments": true,
    "types": [
      "node"
    ],
  },
  "include": [
    "/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}